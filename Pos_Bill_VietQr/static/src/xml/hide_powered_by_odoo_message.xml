<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="hide_powered_by_odoo_message"
       t-inherit="point_of_sale.OrderReceipt"
       t-inherit-mode="extension">
        <xpath expr="//div[@class='pos-receipt-order-data']/p" position="replace">
            <div style="text-align:center; margin-top:-20px; margin-left:20px;">
				<t t-set="tongtien" t-value="Math.round(props.data.amount_total || 0)" />
				<t t-set="noidung" t-value="props.data.name || 'POS PAYMENT'" />
				<t t-set="bankname" t-value="props.data.pos_bank_name"/>
				<img t-att-src="'https://img.vietqr.io/image/' + bankname + '-compact2.jpg?amount=' + tongtien + '&amp;addInfo=' + noidung + '&amp;accountName=TRUONG%20CONG%20QUAN'"
					 style=" width:200px; display:block; margin:0 auto; margin-bottom:-66px; clip-path: inset(30px 0px 63px 0px); "/>
            </div>
        </xpath>
    </t>
</templates>
