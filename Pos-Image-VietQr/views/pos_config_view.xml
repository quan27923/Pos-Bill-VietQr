<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_pos_qr" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.pos.qr</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
          			<setting string="Tk Ngân hàng" help="Nhập tên ngân hàng và tài khoản ngân hàng">
                        <div class="content-group mt16">
						   <field name="pos_bank_name"
							   string="Ngân hàng"
							   placeholder="bankname-bankaccountnumber"
							   help="Nhập tên ngân hàng và tài khoản ngân hàng"/>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
